<section>
    <div class="container">
        <div class="row mt-4">
            <div class="col-2 offset-10">
             <a href="/admin/add-products"> <button class=" btn btn-success form-control">ADD PRODUCTS</button></a>  
            </div>
            <div class="col-12 mt-4">
                <table class="table">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">Title</th>
      <th scope="col">category</th>
      <th scope="col">description</th>
      <th scope="col">Image</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" alt="{{this._id}}" width="50px" height="50px"></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">EDIT</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure{{this.name}} ?')">DELETE</a></td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
            </div>
        </div>
    </div>
</section>