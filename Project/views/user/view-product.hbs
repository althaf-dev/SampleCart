<section class="container mt-5">

  <div class="row">

    {{#each products}}

      <div class="col-md-3 p-3 mt-3">

        <div class="card mt-5 bg-dark bg-gradient text-white text-center" style="width: 15rem; height:25rem">
          <img src="/product-images/{{this._id}}.jpg"  class="card-img-top" alt="card-image" width="10rem" height="60%" />
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}.</p>
            
            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
          </div>
        </div>

      </div>

    {{/each}}

  </div>

</section>